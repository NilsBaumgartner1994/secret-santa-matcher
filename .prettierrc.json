{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 10000,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 100,
        "proseWrap": "always"
      }
    },
    {
      "files": "*.{yaml,yml}",
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": "apps/frontend/app/**/*.{js,jsx,ts,tsx}",
      "options": {
        "useTabs": true,
        "tabWidth": 1
      }
    }
  ]
}
